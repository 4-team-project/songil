<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.takku.project.mapper.ProductMapper">

    <!-- 1. 상품 등록 -->
    <insert id="insertProduct" parameterType="ProductDTO">
        INSERT INTO takku_product (
            store_id,
            product_name,
            price,
            description,
            created_at
        ) VALUES (
            #{storeId},
            #{productName},
            #{price},
            #{description},
            SYSDATE
        )
    </insert>

    <!-- 2. 상점 ID로 상품 목록 조회 -->
    <select id="selectProductByStoreId" parameterType="int" resultType="ProductDTO">
        SELECT
            product_id,
            store_id,
            product_name,
            price,
            description,
            created_at
        FROM takku_product
        WHERE store_id = #{storeId}
    </select>

    <!-- 3. 상품 수정 -->
    <update id="updateProduct" parameterType="ProductDTO">
        UPDATE takku_product
        SET
            product_name = #{productName},
            price = #{price},
            description = #{description}
        WHERE product_id = #{productId}
    </update>


    <!-- 4. 상품 삭제 -->
    <delete id="deleteProduct" parameterType="int">
      DELETE FROM product
      WHERE product_id = #{productId}
    </delete>

    <!-- 5. 상품id로 상품 조회 -->
    <select id = "selectByProductId" parameterType="int">
      SELECT *
      FROM takku_product
      WHERE product_id = #{productId}
    </select>
</mapper>

